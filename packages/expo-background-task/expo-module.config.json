{
  "platforms": [ "apple", "android", "cli", "devtools" ],
  "apple": {
    "appDelegateSubscribers": [ "BackgroundTaskAppDelegateSubscriber" ],
    "modules": [ "BackgroundTaskModule" ]
  },
  "android": {
    "modules": [ "expo.modules.backgroundtask.BackgroundTaskModule" ]
  },
  "cli": {
    "description": "Expo: manage background tasks",
    "commands": [
      { "name": "list", "caption": "List registered background tasks" },
      { "name": "test", "caption": "Trigger background tasks for testing in connected apps" }
    ],
    "mcpEnabled": true,
    "communicatesWithApps": true,
    "main": "cli/build/index.js"
  }
}
